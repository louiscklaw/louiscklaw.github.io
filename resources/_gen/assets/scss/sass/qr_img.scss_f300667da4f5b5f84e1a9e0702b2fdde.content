@media (max-width: 2000px) {
  .qr-img {
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    width: 50vh;
    height: 50vh;
    max-width: 500px;
    max-height: 500px; } }

@media (max-width: 450px) {
  .qr-img {
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    max-width: 100%;
    max-height: 500px; } }
