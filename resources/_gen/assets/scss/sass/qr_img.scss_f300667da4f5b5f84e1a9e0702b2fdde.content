@media (max-width: 2000px) {
  .qr-img {
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    width: auto;
    height: 80vh;
    max-width: 500px;
    max-height: calc(80vh - var(--header-height) - var(--footer-height)); } }

@media (max-width: 450px) {
  .qr-img {
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
    max-width: auto;
    max-height: 300px; } }
