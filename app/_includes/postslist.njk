<div class="w-full flex flex-row flex-wrap list-none">
  {% for post in postslist | reverse %}
  <li class="basis-full lg:basis-1/3 px-0 lg:px-2">
    <a href="{{ post.url }}">
      <div class="p-2 lg:p-4 rounded-xl bg-slate-50 border border-slate-150 prose prose-p:mb-0 prose-h2:text-base">
        {% if post.data.title %}
          <h2>{{ post.data.title }}</h2>
        {% else %}
          <code>{{ post.url }}</code>
        {% endif %}
        <p class="mt-4">Read Install and Update instructions here</p>
        <div>
          <time datetime="{{ post.date | htmlDateString }}"> {{ post.date | readableDate("LLLL yyyy") }} </time>
          · 3 min · Aditya Telange
        </div>
      </div>
    </a>
  </li>
  {% endfor %}
</div>
