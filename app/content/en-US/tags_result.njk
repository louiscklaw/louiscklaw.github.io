---
layout: layouts/base.njk

pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - post
    - posts
    - tagList
  addAllPagesToCollections: true

eleventyComputed:
  title: Tagged “{{ tag }}”

permalink: /en-US/tags/{{ tag | slugify }}/
---

<div
  class="
    prose
    max-w-none
    flex flex-col m-auto
    w-full lg:w-6/12
    pt-0 lg:pt-8
    "
  style="min-height: calc(100vh - 60px - 100px - 100px)">

  <div class="w-full">
    <h1>Tagged "{{ tag }}"</h1>
  </div>

  {% set postslist = collections[ tag ] %}

  <div class="my-8" >
    <div>
      {% include "tagslist.njk" %}
    </div>
  </div>

  <div class="w-full flex justify-center">
    <a href="{{ "/tags/" | locale_url }}/" class="no-underline" >
      <button class="
        btn btn-active btn-ghost
        w-fit m-auto my-8
      ">
        <span><i class="fa-solid fa-hashtag"></i> {{ "See all tags" | i18n }}</span>
      </button>
      </a>
  </div>

</div>
