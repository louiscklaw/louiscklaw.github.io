---
layout: base
---

<header class="hero">
  <div class="hero-content">
    <div class="intro">{{ content | safe }}</div>

    {% if site.socialLinks %}
      <ul class="hero__social-links">
        {% for item in site.socialLinks %} 
          {% set externalAttribute = '' %} 

          {% if item.external %} 
            {% set externalAttribute = 'target="_blank" rel="noopener noreferrer"' %} 
          {% endif %}

          <li>
            <a href="{{ item.url | url }}" {{ externalAttribute | safe }}
              >{{ item.text }}</a
            >
          </li>
        {% endfor %}
      </ul>
    {% endif %}
    
  </div>
</header>


<section class="post-list__wrapper">
  <h2 class="post-list__heading">Recent Works</h2>

  {% set workslist = collections.works | head(-3) %} {% include "works-list.njk" %}
</section>

<a class="all-works-link" href="{{ '/blog/' | url }}">
  View All Works
</a>
